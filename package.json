{
  "name": "auto-wrap-crm",
  "version": "1.0.0",
  "description": "CRM system for auto wrap shop to manage customers, cars, and services",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
