{
  "name": "auto-wrap-crm",
  "version": "1.0.0",
  "description": "CRM system for auto wrap shop to manage customers, cars, and services",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:supabase": "node server-supabase.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:supabase": "concurrently \"npm run server:supabase\" \"npm run client\"",
    "server": "nodemon server.js",
    "server:supabase": "nodemon server-supabase.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "migrate": "node migrate-to-supabase.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "recharts": "^3.1.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "crm",
    "auto-wrap",
    "customer-management"
  ],
  "author": "Your Name",
  "license": "MIT"
}
